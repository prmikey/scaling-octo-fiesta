<Window x:Class="VendorWarrantyManager.Views.WarrantyCheckerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Warranty Checker"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Warranty Checker"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"
                          Foreground="{StaticResource PrimaryColor}"/>

                <TextBlock Text="Service Tag / Serial Number"
                          FontSize="14"
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextColor}"/>
                <TextBox x:Name="ServiceTagTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,20"/>

                <Button Content="Check Warranty"
                       Style="{StaticResource PrimaryButton}"
                       Click="CheckWarrantyButton_Click"
                       Height="40"/>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Loading Indicator -->
                    <StackPanel x:Name="LoadingPanel"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock Text="Checking warranty..."
                                  FontSize="16"
                                  Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>

                    <!-- No Results Message -->
                    <TextBlock x:Name="NoResultsTextBlock"
                              Text="Enter a service tag to check warranty"
                              FontSize="14"
                              Foreground="{StaticResource TextColor}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Visibility="Visible"/>

                    <!-- Results Panel -->
                    <StackPanel x:Name="ResultsPanel" Visibility="Collapsed">
                        <TextBlock Text="Warranty Information"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,20"
                                  Foreground="{StaticResource PrimaryColor}"/>

                        <!-- Status Indicator -->
                        <Border x:Name="StatusBorder"
                               CornerRadius="4"
                               Padding="15,10"
                               Margin="0,0,0,20"
                               Background="#E8F5E9">
                            <TextBlock x:Name="StatusTextBlock"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#2E7D32"
                                      TextAlignment="Center"/>
                        </Border>

                        <!-- Warranty Details -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Tag:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ServiceTagResult" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Product Name:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProductNameResult" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Service Level:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ServiceLevelResult" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Start Date:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="StartDateResult" Margin="0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="End Date:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="EndDateResult" Margin="0,5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="WarrantyStatusResult" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="Close"
               Style="{StaticResource PrimaryButton}"
               Click="CloseButton_Click"
               Height="40"
               Margin="0,20,0,0"/>
    </Grid>
</Window>
