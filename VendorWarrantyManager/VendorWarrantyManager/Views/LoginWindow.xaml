<Window x:Class="VendorWarrantyManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vendor Warranty Manager - Login"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Border Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Margin="40"
                Padding="40"
                Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel>
                <!-- Logo/Title -->
                <TextBlock Text="Vendor Warranty Manager"
                          FontSize="24"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="{StaticResource PrimaryColor}"
                          Margin="0,0,0,30"/>

                <!-- Vendor Selection -->
                <TextBlock Text="Select Vendor"
                          FontSize="14"
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextColor}"/>
                <ComboBox x:Name="VendorComboBox"
                         Style="{StaticResource ModernComboBox}"
                         Margin="0,0,0,20"
                         SelectedIndex="0">
                    <ComboBoxItem Content="Dell Tech Direct"/>
                    <ComboBoxItem Content="Lenovo"/>
                </ComboBox>

                <!-- Username -->
                <TextBlock Text="Username"
                          FontSize="14"
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextColor}"/>
                <TextBox x:Name="UsernameTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Password"
                          FontSize="14"
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextColor}"/>
                <PasswordBox x:Name="PasswordBox"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,10"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorTextBlock"
                          Text=""
                          Foreground="Red"
                          FontSize="12"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"
                          Visibility="Collapsed"/>

                <!-- Login Button -->
                <Button Content="Login"
                       Style="{StaticResource PrimaryButton}"
                       Click="LoginButton_Click"
                       Height="40"
                       Margin="0,10,0,0"/>

                <!-- Loading Indicator -->
                <StackPanel x:Name="LoadingPanel"
                           Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Visibility="Collapsed">
                    <TextBlock Text="Authenticating..."
                              FontSize="14"
                              Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
