<Window x:Class="VendorWarrantyManager.Views.ClaimMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Make Claim"
        Height="750"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Create New Claim"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,0,0,10"
                          Foreground="{StaticResource PrimaryColor}"/>

                <TextBlock x:Name="VendorInfoTextBlock"
                          Text="Vendor: Dell"
                          FontSize="14"
                          Margin="0,0,0,20"
                          Foreground="{StaticResource TextColor}"/>

                <!-- Dell Image Requirement Notice -->
                <Border x:Name="DellNotice"
                       Background="#FFF3CD"
                       BorderBrush="#FFC107"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="15"
                       Margin="0,0,0,20"
                       Visibility="Collapsed">
                    <TextBlock Text="âš  Dell Tech Direct requires images for every claim (1-8 images)"
                              FontSize="13"
                              Foreground="#856404"
                              TextWrapping="Wrap"/>
                </Border>

                <!-- Service Tag -->
                <Border Background="{StaticResource SurfaceColor}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Service Tag / Serial Number *"
                                  FontSize="14"
                                  Margin="0,0,0,5"
                                  Foreground="{StaticResource TextColor}"/>
                        <TextBox x:Name="ServiceTagTextBox"
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Background="{StaticResource SurfaceColor}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Issue Description *"
                                  FontSize="14"
                                  Margin="0,0,0,5"
                                  Foreground="{StaticResource TextColor}"/>
                        <TextBox x:Name="DescriptionTextBox"
                                Style="{StaticResource ModernTextBox}"
                                Height="100"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Optional Fields -->
                <Border Background="{StaticResource SurfaceColor}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Part Number (Optional)"
                                  FontSize="14"
                                  Margin="0,0,0,5"
                                  Foreground="{StaticResource TextColor}"/>
                        <TextBox x:Name="PartNumberTextBox"
                                Style="{StaticResource ModernTextBox}"
                                Margin="0,0,0,15"/>

                        <TextBlock Text="Component Serial Number (Optional)"
                                  FontSize="14"
                                  Margin="0,0,0,5"
                                  Foreground="{StaticResource TextColor}"/>
                        <TextBox x:Name="SerialNumberTextBox"
                                Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Border>

                <!-- Image Upload Section -->
                <Border Background="{StaticResource SurfaceColor}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Images"
                                      FontSize="14"
                                      VerticalAlignment="Center"
                                      Foreground="{StaticResource TextColor}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="ImageCountTextBlock"
                                          Text="0/8"
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"
                                          Foreground="{StaticResource PrimaryColor}"/>

                                <Button Content="Add Images"
                                       Style="{StaticResource PrimaryButton}"
                                       Click="AddImagesButton_Click"
                                       Padding="15,8"/>
                            </StackPanel>
                        </Grid>

                        <!-- Image Preview -->
                        <ItemsControl x:Name="ImagePreviewList" Margin="0,10,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F3F2F1"
                                           CornerRadius="4"
                                           Padding="10"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Column="0"
                                                  Source="{Binding ThumbnailSource}"
                                                  Width="60"
                                                  Height="60"
                                                  Margin="0,0,10,0"
                                                  Stretch="UniformToFill"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}"
                                                          FontSize="13"
                                                          FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding FileSize}"
                                                          FontSize="11"
                                                          Foreground="Gray"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                   Content="Remove"
                                                   Style="{StaticResource PrimaryButton}"
                                                   Click="RemoveImageButton_Click"
                                                   Tag="{Binding}"
                                                   Padding="10,5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           Content="Submit Claim"
                           Style="{StaticResource PrimaryButton}"
                           Click="SubmitClaimButton_Click"
                           Height="45"
                           Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                           Content="Cancel"
                           Style="{StaticResource PrimaryButton}"
                           Click="CancelButton_Click"
                           Height="45"
                           Margin="10,0,0,0"/>
                </Grid>

                <!-- Loading Indicator -->
                <StackPanel x:Name="LoadingPanel"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Visibility="Collapsed">
                    <TextBlock Text="Creating claim..."
                              FontSize="16"
                              Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
