<Window x:Class="VendorWarrantyManager.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vendor Warranty Manager - Dashboard"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TitleTextBlock"
                          Text="Dashboard"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="{StaticResource PrimaryColor}"/>
                <TextBlock x:Name="UserInfoTextBlock"
                          Text="Logged in as: User"
                          FontSize="14"
                          Foreground="{StaticResource TextColor}"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                   Content="Logout"
                   Style="{StaticResource PrimaryButton}"
                   Click="LogoutButton_Click"
                   Padding="20,10"/>
        </Grid>

        <!-- Action Bar -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filter by User:"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              Foreground="{StaticResource TextColor}"/>
                    <TextBox x:Name="FilterUserTextBox"
                            Style="{StaticResource ModernTextBox}"
                            Width="200"
                            Margin="0,0,10,0"/>
                    <Button Content="Apply Filter"
                           Style="{StaticResource PrimaryButton}"
                           Click="ApplyFilterButton_Click"
                           Padding="15,8"/>
                    <Button Content="Clear Filter"
                           Style="{StaticResource PrimaryButton}"
                           Click="ClearFilterButton_Click"
                           Padding="15,8"
                           Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button Content="Warranty Checker"
                           Style="{StaticResource PrimaryButton}"
                           Click="WarrantyCheckerButton_Click"
                           Padding="20,10"
                           Margin="0,0,10,0"/>
                    <Button Content="Make Claim"
                           Style="{StaticResource PrimaryButton}"
                           Click="MakeClaimButton_Click"
                           Padding="20,10"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="3"
                       Content="Refresh"
                       Style="{StaticResource PrimaryButton}"
                       Click="RefreshButton_Click"
                       Padding="20,10"
                       Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Claims List -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceColor}"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Claims"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,15"
                          Foreground="{StaticResource TextColor}"/>

                <!-- Loading Indicator -->
                <StackPanel x:Name="LoadingPanel"
                           Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed">
                    <TextBlock Text="Loading claims..."
                              FontSize="16"
                              Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>

                <!-- No Claims Message -->
                <TextBlock x:Name="NoClaimsTextBlock"
                          Grid.Row="1"
                          Text="No claims found"
                          FontSize="16"
                          Foreground="{StaticResource TextColor}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Claims DataGrid -->
                <DataGrid x:Name="ClaimsDataGrid"
                         Grid.Row="1"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         CanUserResizeRows="False"
                         AlternatingRowBackground="#F9F9F9"
                         Background="White"
                         BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="120"/>
                        <DataGridTextColumn Header="Service Tag" Binding="{Binding ServiceTag}" Width="150"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}" Width="150"/>
                        <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat={}{0:MM/dd/yyyy}}" Width="120"/>
                        <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
